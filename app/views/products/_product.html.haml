.pickup-content
  = link_to "products/#{product.id}" do
    %figure.content__box
      .img_content
      - if product.images[0].image.present?
        = image_tag "#{product.images[0].image}", class:'pickup-content__img'
      - else
        = image_tag "", class:'pickup-content__img'
      %figcaption.text__box 
        %span 
          = product.detail
      