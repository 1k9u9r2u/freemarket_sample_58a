.container
  = render "/shared/header"
  .product-show-main-background
    %section.product-show-product-box-container
      %h1
        .product-name
          = @product.name
      .product-main-content
        .product-photo
          .slider
            .slider__product
              .image
                = image_tag "#{@product.images[0].image}"
                - unless @product.status == 0
                  .product-tag-sold-out-top
                    .sold-out-text-top SOLD
                - else
                  .none-sold

              .owl-dot
                - @product.images.each.with_index do |image, index|
                  - if image.present?
                    .owl-dot__product.current
                      .owl-dot__product__box
                        = image_tag image.image_url
                  - else
                    .owl-dot__product
                      .owl-dot__product__box
                        = image_tag image.image
                - if @product.images.length > 5
                  - for i in 1..(10 - @product.images.length)
                    .owl-dot__dummy
                
        %table.product-detail-table
          %tbody
            %tr
              %th 出品者
              %td
                = link_to "#{@product.user.nickname}", mypages_path, class: "user-name-string";
                .product-user-ratings
                  .product-user-rating
                    = image_tag("")
                    = fa_icon "smile-o"
                    %span 0
                  .product-user-rating
                    = image_tag("")
                    = fa_icon "meh-o"
                    %span 0
                  .product-user-rating
                    = image_tag("")
                    = fa_icon "frown-o"
                    %span 0
            %tr
              %th カテゴリー
              %td

                .product-detail-table-sub
                  = @product.category
                .product-detail-table-sub
                .product-detail-table-sub__sub
                  %i.fas.fa-angle-right
                  = @product.category

                .product-detail-table-sub
                .product-detail-table-sub__sub
                  %i.fas.fa-angle-right
                .product-detail-table-sub__sub__sub
                  %i.fas.fa-angle-right
                  = @product.category
            %tr
              %th ブランド
              %td
                = link_to "//www.mercari.com/jp/brand/4136/" do
                  .brand-name
                    スリー
            %tr
              %th 商品の状態
              %td
                .product-detail
                  = @product.state
            %tr
              %th 配送料の負担
              %td
                .product-detail
                  = @product.fee_payer
            %tr
              %th 配送の方法
              %td
                .product-detail らくらくメルカリ便
            %tr
              %th 発送元地域
              %td
                .product-detail.prefecture-name
                  = @product.city
            %tr
              %th 配送日の目安
              %td
                .product-detail
                  = @product.delivery_time

      .product-price-box
        %span.product-price 
          ¥ #{@product.price}
        %span.product-tax (税込)
        %span.product-fee_payer

      - unless @product.user == current_user
        - if @product.status == 0
          - if user_signed_in?
            = link_to "/products/#{@product.id}/buy", data: { turbolinks: false} do
              .product-buy-btn 購入画面に進む
          - else
            = link_to "/users/sign_in" do
              .product-buy-btn 購入画面に進む
        - else
          .product-buy-btn-sold 売り切れました

      .product-description
        %p.product-description__inner
          = @product.detail
      .product-button-container.clearfix
        .product-button-left
          .product-button-like
            %button{type: "button", name: "like!", class: "product-button"}
              = fa_icon "heart"
              %span.fade-in-down いいね!
              %span.fade-in-down 0
        .product-button__report
          = link_to "", class: "product-button__report" do
            = fa_icon "flag"
            %span.fade-in-down 不適切な商品の報告            
        .product-button-right
          = link_to 'https://www.mercari.com/jp/safe/description/', target: "_blank", class: "safe-description" do
            = fa_icon "lock"
            あんしん・あんぜんへの取り組み
    - if user_signed_in? && current_user.id == @product.user_id
      .parent-own-product-container
        - unless @product.status
          = link_to "商品の編集", edit_path(@product), class: "parent-own-product-container__edit"
          .parent-own-product-container__or
            or
          - unless @product.status == 0
            = link_to "出品を停止する", stop_path(@product), class: "parent-own-product-container__close"
          - else
            = link_to "出品を再開する", resale_path(@product), class: "parent-own-product-container__open"
        = link_to "商品を削除する", delete_path(@product), method: :delete, class: "parent-own-product-container__delete-btn"

  .product-message-content
    .message-content
    .message-content__box__form
      %form.product-show-message-form{method: "post"}
      %input{type: "hidden"}
      %p.attention 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      %input{type: "hidden"}
      %input{type: "hidden"}
      %textarea.text{type: "text", name: "body"}
      .message-submit__details
      %button{type: "submit", class: "product-show-message-submit__button-default"}
        %span.font-white コメントする 
      .nav-product-link
        .previous-product.items-link_to
          =fa_icon "chevron-left"
          = link_to "前の商品へ", "https://item.mercari.com/jp/"
          .next-product.items-link_to
            = link_to "次の商品へ", "https://item.mercari.com/jp/"
            = fa_icon "chevron-right"

        .product-social-media-box
          .text-center
          %ul.social-media-box
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                = fa_icon "facebook-square"
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                = fa_icon "twitter-square"
            %li
              = link_to "#", target: "_blank", class: "share-btn" do
                = fa_icon "pinterest-square"
  = render "/shared/footer"
