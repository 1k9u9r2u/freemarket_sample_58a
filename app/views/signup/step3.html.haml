.signup-wrapper
  .single-header
    %h1.single-header__logo
      = link_to root_path do 
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3951034907"
    %nav.progress-bar
      %ol.clearfix
        %li.progress-bar3__active
          会員情報
          .progress-bar3__active__status
        %li.progress-bar3__active__phone-number
          電話番号認証
          .progress-bar3__active__status__phone-number
        %li.progress-bar3__active__address
          お届け先住所入力
          .progress-bar3__active__status__address
        %li.progress-bar3__active__payment
          支払い方法
          .progress-bar3__active__status__payment
        %li.progress-bar3__active__complete
          完了
          .progress-bar3__active__status__complete

  .signup-main3      
    .signup-main3__head 発送元・お届け先住所入力
    .a-3
      .signup3__form
        %p
          お名前
        %span.content__require 必須 
      = text_field :user, :l_name_kanji, autocomplete: "l_name_kanji", placeholder: '例) 山田', class: "signup3__form__input" 
      = text_field :user, :f_name_kanji, autocomplete: "f_name_kanji", placeholder: '例) 彩', class: "signup3__form__input"
      .signup3__form
        %p
          お名前カナ
        %span.content__require 必須 
      = text_field :user, :l_name_kanji, autocomplete: "l_name_kana", placeholder: '例) ヤマダ', class: "signup3__form__input" 
      = text_field :user, :f_name_kanji, autocomplete: "f_name_kana", placeholder: '例) アヤ', class: "signup3__form__input"
      .signup3__form
        %p
          郵便番号
        %span.content__require 必須 
      = text_field :user, :zipcode, autocomplete: "zipcode", placeholder: '例) 123-4567', class: "signup3__form__input"
      .signup3__form
        %p
          都道府県
        %span.content__require 必須 
      = collection_select :person, :prefecture_id, Prefecture.all, :id, :name, class: "signin3__prefecture"
      .signup3__form
        %p
          市区町村
        %span.content__require 必須 
      = text_field :user, :city, autocomplete: "city", placeholder: '例) 横浜市緑区', class: "signup3__form__input"
      .signup3__form
        %p
          番地
        %span.content__require 必須 
      = text_field :user, :street, autocomplete: "street", placeholder: '例) 青山1-1-1', class: "signup3__form__input"
      .signup3__form
        %p
          建物名
        %span.content__option 任意
      = text_field :user, :building, autocomplete: "building", placeholder: '例) 柳ビル103', class: "signup3__form__input"
      .signup3__form
        %p
          電話
        %span.content__option 任意
      = text_field :user, :telephone, autocomplete: "telephone", placeholder: '例) 09012345678', class: "signup3__form__input"
      .form-text-center-on
      %input.next-btn{type: 'submit',value: '次へ進む'} 
  = render 'signup/login_footer'