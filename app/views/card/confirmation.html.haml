.confirm____container
  .confirm__simple__header__logo
    = link_to root_path do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3791839826"      
  .buy-main
    .buy-main__box
      .buy-content
        %h2.buy-content__header
          購入内容の確認
        .buy-content__product
          .buy-content__product__inner
            .buy-product-main
              .buy-product-image
                = image_tag "#{@product.images[0].image}", height: "64px" , width: "64px"
              .buy-product-name 
              = @product.name
            %form.buy-form
              %p.buy-price
                ¥
                = @product.price.to_s(:delimited)
                %span送料込み
              .buy-have-point
                ポイントはありません
              .buy-price-table
                .buy-price-table__left
                  支払金額
                .buy-price-table__right
                  ¥
                  = @product.price.to_s(:delimited)
              - if @product.status == 0
                = link_to "購入する", "/products/#{@product.id}/card/pay", method: "GET", class:"btn-default"
              - else 
                = link_to "取引が終了したアイテムです", root_path, method: "GET" ,class:"btn-default",style: "background-color: lightgray"
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 配送先
            .user-info-text
              = @addresses.postal_code.to_s.insert(3, " - ")
              %br
              = @addresses.prefecture + @addresses.city + @addresses.street + @addresses.building
              %br
              = current_user.l_name_kanji + " " + current_user.f_name_kanji
            .user-info-fix
              = link_to "#" do
                変更する
                %span 
                %i.fa.fa-chevron-right
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 支払方法

            .user-info-text
              = "**** **** ****"+ "#{@default_card_information.last4}"
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            .user-info-fix
              = link_to "#" do
                変更する
                %span
                %i.fa.fa-chevron-right

  .signup__footer
    .signup__footer__detail
      = link_to "プライバシーポリシー"
      = link_to "メルカリ利用規約"
      = link_to "特定商取引に関する表記"
    .signup__footer__logo
      = link_to root_path do
        = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2482339763", width: "80px"
    %p © 2019 Mercari